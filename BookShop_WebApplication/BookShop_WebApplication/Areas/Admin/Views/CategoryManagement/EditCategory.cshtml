@model BookShop_WebApplication.Models.CATEGORY

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="wrapper">
        <div class="row" style="height: 600px">
            <div class="col-lg-12 main-chart">
                <div class="form-horizontal">
                    <h4>CATEGORY</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CategoryID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success">Edit</button>
                            <a class="btn btn-default" href="~/Admin/CategoryManagement/Index">Back</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <span style="color:red"><strong>@ViewBag.Edit</strong></span>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </section>
                }

