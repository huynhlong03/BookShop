@*model IEnumerable<BookShop_WebApplication.Models.CLIENT>*@
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<BookShop_WebApplication.Models.CLIENT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
    ViewBag.Active = 6;
}

<section class="wrapper">
    <div class="row" style="height: 600px">
        <div class="col-lg-12 main-chart">
            @if (Model != null && Model.Any())
            {
                var i = 1;
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>
                            Name
                        </th>

                        <th>
                            Phone
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Address
                        </th>


                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClientName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>


                            <td>
                                <a class="btn btn-info" href="~/Admin/ClientManagement/DetailClient?clientId=@item.ClientID">View</a>
                                <a class="btn btn-primary" href="~/Admin/ClientManagement/EditClient?clientId=@item.ClientID">Edit</a>
                                <a class="btn btn-danger" href="">Delete</a>
                            </td>
                        </tr>
                        i++;
                    }

                </table>
            }
            <div class="pagination">
                @Html.PagedListPager(Model, page => Url.Action("Index", "ClientManagement", new { page, pagesize = @ViewBag.PageSize }))
            </div>
        </div>
    </div>
</section>
