@model List<BookShop_WebApplication.Models.DoanhThu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
    ViewBag.Active = 0;
}

<div class="container p-3">
    <div class="row gy-3" style="margin-top: 50px; ">
        <div class="col col-lg-3 col-md-4 col-sm-6 col-6">
            <div class="card p-3 w-100" style="height:100px">
                <div class="d-flex justify-content-between">
                    <div class="p-3">
                        <h5>DOANH THU</h5>
                        <p class="fs-5">@ViewBag.tongdt VNĐ</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="50"
                             height="50"
                             fill="green"
                             class="bi bi-coin"
                             viewBox="0 0 16 16">
                            <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9H5.5zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518l.087.02z" />
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11zm0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-lg-3 col-md-4 col-sm-6 col-6">
            <div class="card p-3 w-100" style="height:100px">
                <div class="d-flex justify-content-between">
                    <div class="p-3">
                        <h5>KHÁCH HÀNG</h5>
                        <p class="fs-5">@ViewBag.tongcl</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="50"
                             height="50"
                             fill="cyan"
                             class="bi bi-person-fill"
                             viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-lg-3 col-md-4 col-sm-6 col-6">
            <div class="card p-3 w-100" style="height:100px">
                <div class="d-flex justify-content-between">
                    <div class="p-3">
                        <h5>ĐƠN HÀNG</h5>
                        <p class="fs-5">@ViewBag.slorder</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="50"
                             height="50"
                             fill="blue"
                             class="bi bi-cart-fill"
                             viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-lg-3 col-md-4 col-sm-6 col-6">
            <div class="card p-3 w-100" style="height:100px">
                <div class="d-flex justify-content-between">
                    <div class="p-3">
                        <h5>SẢN PHẨM</h5>
                        <p class="fs-5">@ViewBag.tongsl</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="50"
                             height="50"
                             fill="currentColor"
                             class="bi bi-journals"
                             viewBox="0 0 16 16">
                            <path d="M5 0h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2 2 2 0 0 1-2 2H3a2 2 0 0 1-2-2h1a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1H1a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v9a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1H3a2 2 0 0 1 2-2z" />
                            <path d="M1 6v-.5a.5.5 0 0 1 1 0V6h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V9h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 2.5v.5H.5a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1H2v-.5a.5.5 0 0 0-1 0z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row gy-3 mt-3">
        <div class="col col-lg col-md-12 col-sm-12 col-12">
            <div class="card p-3 w-100 mt-3" style="height:auto">
                <p class="fs-5 fw-bold">Top Danh mục được yêu thích nhất</p>
                <table class="table table-bordered bg-white">
                    <thead>
                        <tr>
                            <th scope="col">Hình Ảnh</th>
                            <th scope="col">Tên sách</th>
                            <th scope="col">Số lượng</th>
                        </tr>
                        @foreach (var Sach in Model)
                        {
                    <tr>
                        @*<td>@Sach.HinhAnh</td>*@
                        <td style="text-align:center"><img src="~/assets/product-img/@Sach.HinhAnh" style=" width: 100px;" /></td>
                        <td>@Sach.TenSanPham</td>
                        <td>@Sach.SoLuongBanChay</td>
                    </tr>
                        }
                    </thead>
                    <tbody>
                        @*<% dashboard.listCategory.forEach(function(item, index) { %>*@
                        <tr>
                            <td style="cursor: pointer"
                                class="w-25"
                                data-bs-toggle="tooltip"
                                data-bs-placement="right"
                                title="<%= item.name %>">
                                <span class="d-inline-block text-truncate"
                                      style="max-width: 200px">
                                    @*<%= item.name %>*@
                                </span>
                            </td>

                            <td class="w-2">@*<%= item.addDate %>*@</td>
                            <td class="w-2">@*<%= item.editDate %>*@</td>
                        </tr>
                        @*<% }); %>*@
                    </tbody>
                </table>
            </div>
        </div>
       
    </div>
</div>

